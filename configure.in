dnl Process this file with autoconf to produce a configure script.
AC_INIT(libvx68k/dos.cc)
AM_INIT_AUTOMAKE(vx68k, 1.1.4)
AM_CONFIG_HEADER(config.h)
AC_DEFINE(_GNU_SOURCE,, [Define for GNU extensions. ])
dnl AC_DEFINE(_REENTRANT)
AC_PROG_CC
AC_PROG_CXX
dnl AC_PROG_CPP
AM_PROG_LIBTOOL
AC_ISC_POSIX
dnl AC_SEARCH_LIBS(pthread_create, pthread)
AM_PATH_GTK(1.2.0,,, gthread)
AC_CHECK_HEADERS(fcntl.h unistd.h)
AC_ARG_WITH(nana,
[  --with-nana             use GNU Nana for testing [no]],, with_nana=no)
if test "$with_nana" != no; then
  AC_CHECK_LIB(nana, _I_default_handler)
  AC_CHECK_HEADERS(nana.h)
fi

AC_TYPE_OFF_T
AC_TYPE_SIZE_T
HS_CPLUSPLUS_EXCEPTIONS
if test "$hs_cv_cplusplus_exceptions" = no; then
  AC_MSG_WARN([exceptions not supported in C++;])
  AC_MSG_WARN([this package cannot be built without exceptions])
fi

AC_CHECK_FUNCS(localtime_r)
ALL_LINGUAS=""
AM_GNU_GETTEXT
AC_OUTPUT(Makefile \
include/Makefile include/vm68k/Makefile include/vx68k/Makefile \
libvm68k/Makefile libvx68k/Makefile vx68kui/Makefile \
intl/Makefile bin/Makefile po/Makefile.in \
doc/Makefile testsuite/Makefile)
